# macros modify the scope and substitute code
# in most cases it's better to use lambdas
{
	# kindof a parameter...
	num $param =

	# print param
	$param println

	# if param > 1 then call self
	{
		# call self with halved value
		$param 2 /
			$recTest @
	} $param 1 > if

# store macro in a variable
} $recTest =


# call macro
2 20 ** $recTest @
